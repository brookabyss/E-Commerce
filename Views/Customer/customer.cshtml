@model Commerce.Models.CustomersView 

@foreach(var e in ViewBag.errors){
    <p>@e</p>
}
<h1>Add a new Customer</h1>
<form asp-controller="Customer" asp-action="CreateCustomers" method="post">
    <label for="Name">Customer Name:</label>
    <input asp-for="Name" >
   <button type="submit" >Add</button>

</form>
<table>
    <tr>
        <th>Customer Name</th>
        <th>Created At</th>
        <th>Action</th>
        @foreach(var c in ViewBag.Customers){
            <tr>
                <td>@c.Name</td>
                <td>@c.CreatedAt</td>
                <td><a asp-controller="Customer" asp-action="RemoveCustomer" asp-route-id=@c.CustomersId>Remove</a> </td>
            </tr>
            
        }
    </tr>
</table>